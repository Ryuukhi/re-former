<%= form_tag('users', method: :post) do %><br><br>
<%= label_tag 'name' %><br><br>
<%= text_field_tag 'user[name]' %><br><br>
<%= label_tag 'password' %><br><br>
<%= password_field_tag 'user[password]' %><br><br>
<%= label_tag 'email' %><br><br>
<%= email_field_tag 'user[email]' %><br><br>
<%= submit_tag %>
<% end %>